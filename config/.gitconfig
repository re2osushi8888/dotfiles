[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig
[credential "https://github.com"]
	helper = !gh auth git-credential
[credential "https://gist.github.com"]
	helper = !gh auth git-credential
[user]
	name = re2osushi8888
	email = re.2osushi8888@gmail.com
[alias]
  a = add
  aa = add -A
  br = branch
  cm = commit -m
  st = status -sb
  sw = switch
  swc = switch -c
  lg = log --oneline --graph --decorate
  lga = log --oneline --graph --decorate --all
  undo = reset --soft HEAD^
  unstage = restore --staged
  discard = restore
  amend = commit --amend
  d = diff
  ds = diff --staged
[diff]
	tool = nvimdiff
[difftool]
	prompt = false
[difftool "nvimdiff"]
  cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true # use n and N to move between diff sections
  line-numbers = true
  side-by-side = true
[ghq]
  root = ~/work
	root = ~/repos
[ghq "https://github.com/re2osushi8888"]
  root = ~/repos/
